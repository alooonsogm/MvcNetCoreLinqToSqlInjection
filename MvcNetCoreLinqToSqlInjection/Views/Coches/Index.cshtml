@model ICoche

<h1 style="color:blue">
    @Model.Marca @Model.Modelo
</h1>

<h2>
    Velocidad actual: <span style="color:green">@Model.Velocidad</span>
</h2>

<h1>
    Velocidad maxima: <span style="color:red">@Model.VelocidadMax</span>
</h1>

<form method="post">
    <button name="accion" value="acelerar" class="btn btn-warning">Acelerar</button>
    <button name="accion" value="frenar" class="btn btn-danger">Frenar</button>
</form>

<img src="~/images/@Model.Imagen" width="350px" height="300px"/>